<assembly>
    <id>deb</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/deb/</directory>
            <outputDirectory>debian</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${filtered-skel}/lib/systemd</directory>
            <outputDirectory>lib/systemd</outputDirectory>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>src/main/scripts/dcache.bash-completion</source>
            <outputDirectory>debian</outputDirectory>
        </file>
        <file>
            <source>src/main/scripts/dcache-limits.conf</source>
            <outputDirectory>etc/security/limits.d</outputDirectory>
            <destName>92-dcache.conf</destName>
        </file>
        <file>
            <source>src/main/scripts/dcache.rsyslog</source>
            <outputDirectory>etc/rsyslog.d</outputDirectory>
            <destName>30-dcache.conf</destName>
        </file>
    </files>
</assembly>
