<project name="server-tgz-build"
         xmlns:artifact="antlib:org.apache.maven.artifact.ant">

    <target name="server.tgz" description="Build the dcache-server-xxx.tar">
        <artifact:mvn pom="${maven.pom}"
                      mavenHome="${maven.home}"
                      fork="true">
            <jvmarg value="-XX:MaxPermSize=256m"/>
            <arg value="package"/>
            <arg value="-am"/>
            <arg value="-pl"/>
            <arg value="modules/tar"/>
            <arg value="-DskipTests"/>
        </artifact:mvn>

	<move todir="${package.root.dir}/tgz">
	    <fileset dir="modules/tar/target">
		<include name="*.tar.gz"/>
	    </fileset>
	</move>
    </target>
</project>
