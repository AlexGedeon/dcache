<project name="server-opt" basedir=".">

    <target name="-dcache-copy-skel-opt">
        <!-- rpm directory structure with some defaults scripts -->
        <copy todir="${server.bin.dir}">
            <fileset dir="${skelDir}">
	      <exclude name="etc/PlotConfiguration.xml"/>
	      <exclude name="**/*.png"/>
	      <exclude name="**/*.gif"/>
	    </fileset>
            <filterset filtersfile="common/opt-layout.properties"/>
        </copy>
        <copy todir="${server.bin.dir}/">
            <fileset dir="${skelDir}/">
                <include name="**/*.png"/>
                <include name="**/*.gif"/>
            </fileset>
        </copy>
    </target>

    <target name="install-server"
            depends="-dcache-copy-skel-opt,dcache,javatunnel,
                     -dcache-classpath"
            description="build deploy-ready server package">
        <chmod dir="${server.bin.dir}/bin"     includes="**/*" perm="ugo+rx" />
        <chmod dir="${server.bin.dir}/libexec" includes="**/*.sh" perm="ugo+rx" />
        <chmod dir="${server.bin.dir}/libexec" includes="**/*.rb" perm="ugo+rx" />
        <chmod dir="${server.bin.dir}/jobs"    includes="**/*" perm="ugo+rx" />
    </target>

</project>
