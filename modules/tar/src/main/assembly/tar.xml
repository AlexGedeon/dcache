<assembly>
    <id>tar</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <excludes>
                <exclude>*:*:war:*</exclude>
                <exclude>saxon:saxon:*:*</exclude>
            </excludes>
            <outputDirectory>share/classes</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>*:*:war:*</include>
            </includes>
            <outputDirectory>share/classes/webapps</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>saxon:saxon:*:*</include>
            </includes>
            <outputDirectory>share/classes/saxon</outputDirectory>
        </dependencySet>
    </dependencySets>

    <files>
        <file>
            <source>${filtered-skel}/libexec/infoProvider/info-based-infoProvider.sh</source>
            <outputDirectory>sbin</outputDirectory>
            <destName>dcache-info-provider</destName>
            <fileMode>775</fileMode>
        </file>

        <file>
            <source>${filtered-skel}/bin/chimera-cli.sh</source>
            <outputDirectory>bin</outputDirectory>
            <destName>chimera-cli</destName>
            <fileMode>775</fileMode>
        </file>

        <file>
            <source>${filtered-skel}/share/httpd/static/images/bg.svg</source>
            <outputDirectory>share/httpd/static/images</outputDirectory>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <!-- This is a different skel directory local to this
                 sub-project. -->
            <directory>${project.basedir}/src/main/skel</directory>
            <outputDirectory></outputDirectory>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${filtered-skel}/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <excludes>
                <!-- .sh files are dealt with one by one above -->
                <exclude>*.sh</exclude>
            </excludes>
            <fileMode>775</fileMode>
        </fileSet>

        <fileSet>
            <directory>${skel}/etc</directory>
            <outputDirectory>etc</outputDirectory>
            <excludes>
                <exclude>PlotConfiguration.xml</exclude>
                <exclude>users/**</exclude>
                <exclude>**/.empty-dir</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${skel}/etc/users</directory>
            <outputDirectory>etc/admin/users</outputDirectory>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${skel}/share/man</directory>
            <outputDirectory>share/man</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${skel}/share/doc</directory>
            <outputDirectory>share/doc/dcache-server</outputDirectory>
            <excludes>
                <exclude>dCacheConfigure/**</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${filtered-skel}/share/defaults</directory>
            <outputDirectory>share/defaults</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${filtered-skel}/share/lib</directory>
            <outputDirectory>share/lib</outputDirectory>
            <excludes>
                <exclude>dCacheConfigure/**</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${skel}/share</directory>
            <outputDirectory>share</outputDirectory>
            <excludes>
                <exclude>man/**</exclude>
                <exclude>doc/**</exclude>
                <exclude>dCacheConfigure/**</exclude>
                <exclude>defaults/**</exclude>
                <exclude>lib/**</exclude>
                <exclude>httpd/static/images/bg.svg</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${filtered-skel}/libexec</directory>
            <outputDirectory>share/lib</outputDirectory>
            <excludes>
                <exclude>infoProvider/info-based-infoProvider.sh</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/chimera-sql/org/dcache/chimera</directory>
            <outputDirectory>share/chimera</outputDirectory>
            <includes>
                <include>sql/**</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${filtered-skel}/jobs</directory>
            <outputDirectory>share/lib</outputDirectory>
            <fileMode>775</fileMode>
        </fileSet>
    </fileSets>
</assembly>