<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean id="properties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <description>Imported configuration data</description>
    <property name="location" value="domaincontext:"/>
    <property name="properties">
      <value>
        xrootdPort=1094
        xrootdPoolTimeout=4000
        xrootdThreads=1000
        xrootdMaxChannelMemorySize=16777216
        xrootdMaxTotalMemorySize=16777216
        xrootdRootPath=/
        xrootdAllowedPaths=
        xrootdPoolManager=PoolManager
        xrootdPoolManagerTimeout=5400000
        nostrongauthorization=
        xrootdIsReadOnly=true
        xrootdAuthzPlugin=org.dcache.xrootd2.security.plugins.tokenauthz.NoAuthorizationFactory
        pnfsmanager=PnfsManager
        loginBrokerUpdateTime=30
        loginBrokerUpdateThreshold=0.1
        loginBroker=LoginBroker
      </value>
    </property>
  </bean>

  <bean id="poolStub" class="org.dcache.cells.CellStub">
    <description>Pool cell stub</description>
    <property name="timeout" value="${xrootdPoolTimeout}"/>
  </bean>

  <bean id="poolManagerStub" class="org.dcache.cells.CellStub">
    <description>Pool manager cell stub</description>
    <property name="timeout" value="${xrootdPoolManagerTimeout}"/>
    <property name="destination" value="${xrootdPoolManager}"/>
  </bean>

  <bean id="scheduledThreadPool"
        class="java.util.concurrent.Executors"
        factory-method="newSingleThreadScheduledExecutor"
        destroy-method="shutdown">
    <description>Thread pool for scheduled activities</description>
  </bean>

  <bean id="requestThreadPool"
        class="org.jboss.netty.handler.execution.MemoryAwareThreadPoolExecutor"
        destroy-method="shutdown">
    <description>Thread pool for xrootd request processing</description>
    <constructor-arg value="${xrootdThreads}"/>
    <constructor-arg value="${xrootdMaxChannelMemorySize}"/>
    <constructor-arg value="${xrootdMaxTotalMemorySize}"/>
  </bean>

  <bean id="acceptThreadPool"
        class="java.util.concurrent.Executors"
        factory-method="newCachedThreadPool"
        destroy-method="shutdown">
    <description>Thread pool for accepting connections</description>
  </bean>

  <bean id="ioThreadPool"
        class="java.util.concurrent.Executors"
        factory-method="newCachedThreadPool"
        destroy-method="shutdown">
    <description>Thread pool for asynchronous I/O processing</description>
  </bean>

  <bean id="connectionTracker"
        class="org.dcache.xrootd2.core.ConnectionTracker">
    <description>Administrative interface to manage connections</description>
  </bean>

  <bean id="server" class="org.dcache.xrootd2.door.NettyXrootdServer"
        init-method="init">
    <description>Netty based Xrootd service</description>
    <property name="port" value="${xrootdPort}"/>
    <property name="requestExecutor" ref="requestThreadPool"/>
    <property name="channelFactory" ref="channelFactory"/>
    <property name="connectionTracker" ref="connectionTracker"/>
    <property name="door" ref="door"/>
    <property name="loginBrokerHandler" ref="lb"/>
  </bean>

  <bean id="pnfs" class="diskCacheV111.util.PnfsHandler">
    <description>PNFS manager client module</description>
    <constructor-arg>
      <bean class="dmg.cells.nucleus.CellPath">
        <constructor-arg value="${pnfsmanager}"/>
      </bean>
    </constructor-arg>
  </bean>

  <bean id="channelFactory"
        class="org.jboss.netty.channel.socket.nio.NioServerSocketChannelFactory">
    <description>Creates Netty channels</description>
    <constructor-arg ref="acceptThreadPool"/>
    <constructor-arg ref="ioThreadPool"/>
  </bean>

  <bean id="authorizationFactory" class="${xrootdAuthzPlugin}"
        init-method="init">
    <description>Authorization plugin</description>
    <property name="keystore" value="${xrootdAuthzKeystore}"/>
    <property name="noStrongAuthorization" value="${nostrongauthorization}"/>
  </bean>

  <bean id="door" class="org.dcache.xrootd2.door.XrootdDoor">
    <description>Gateway between xrootd protocol handler and dCache</description>
    <property name="poolStub" ref="poolStub"/>
    <property name="poolManagerStub" ref="poolManagerStub"/>
    <property name="authorizedWritePaths" value="${xrootdAllowedPaths}"/>
    <property name="authorizationFactory" ref="authorizationFactory"/>
    <property name="pnfsHandler" ref="pnfs"/>
    <property name="transactionPrefix" value="door:${thisCell}@${thisDomain}:"/>
    <property name="readOnly" value="${xrootdIsReadOnly}"/>
    <property name="ioQueue" value="${xrootdIoQueue}"/>
    <property name="rootPath" value="${xrootdRootPath}"/>
  </bean>

  <bean id="lb" class="org.dcache.util.LoginBrokerHandler"
        init-method="start"
        destroy-method="stop">
    <description>Notifies LoginBroker </description>
    <property name="executor" ref="scheduledThreadPool"/>
    <property name="updateTime" value="${loginBrokerUpdateTime}"/>
    <property name="updateThreshold" value="${loginBrokerUpdateThreshold}"/>
    <property name="protocolEngine" value="org.dcache.xrootd2.door.XrootdDoor"/>
    <property name="protocolVersion" value="2.4"/>
    <property name="protocolFamily" value="root"/>
    <property name="loginBroker">
      <bean class="dmg.cells.nucleus.CellPath">
        <constructor-arg value="${loginBroker}"/>
      </bean>
    </property>
  </bean>


</beans>