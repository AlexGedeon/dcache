<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="properties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <description>Imported configuration data</description>
        <property name="location" value="domaincontext:"/>
        <property name="properties">
            <value>
                nfsPoolManager=PoolManager
                nfsPoolManagerTimeout=28000
                chimeraConfig=${ourHomeDir}/config/chimera-config.xml
                DefaultRetentionPolicy=REPLICA
                DefaultAccessLatency=ONLINE
            </value>
        </property>
    </bean>

    <bean id="poolManagerStub" class="org.dcache.cells.CellStub">
        <description>Pool manager cell stub</description>
        <property name="timeout" value="${nfsPoolManagerTimeout}"/>
        <property name="destination" value="${nfsPoolManager}"/>
    </bean>

    <bean id="chimeraXmlConfig" class="java.io.File">
        <description>Chimera XML config File</description>
        <constructor-arg value="${chimeraConfig}"/>
    </bean>

    <bean id="fileSystem" class="org.dcache.chimera.JdbcFs">
        <description>Chimera Filesystem</description>
        <constructor-arg>
            <bean class="org.dcache.chimera.XMLconfig">
                <constructor-arg ref="chimeraXmlConfig"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="export" class="org.dcache.chimera.nfs.ExportFile">
        <description>NFS export file</description>
        <constructor-arg>
            <bean class="java.io.File">
                <constructor-arg value="/etc/exports"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="defaultAccessLatency" class="diskCacheV111.util.AccessLatency"
    factory-method="getAccessLatency">
        <description>Default Access Latency for newly created files</description>
        <constructor-arg value="${DefaultAccessLatency}"/>
    </bean>

    <bean id="defaultRetentionPolicy" class="diskCacheV111.util.RetentionPolicy"
    factory-method="getRetentionPolicy">
        <description>Default Retention Policy for newly created files</description>
        <constructor-arg value="${DefaultRetentionPolicy}"/>
    </bean>

    <bean id="extractor" class="org.dcache.chimera.namespace.ChimeraOsmStorageInfoExtractor">
        <description>Storage Info Extractor</description>
        <constructor-arg ref="defaultRetentionPolicy"/>
        <constructor-arg ref="defaultAccessLatency"/>
    </bean>

    <bean id="door" class="org.dcache.chimera.nfsv41.door.NFSv41Door"
        init-method="init">
        <description>dCache implementation of NFSv4.1 MDS (door)</description>
        <property name="poolManagerStub" ref="poolManagerStub"/>
        <property name="fileSystemProvider" ref="fileSystem"/>
        <property name="exportFile" ref="export" />
        <property name="chimeraStorageInfoExtractable" ref="extractor" />
    </bean>

</beans>
