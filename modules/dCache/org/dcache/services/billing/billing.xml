<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
       default-autowire="byType">

  <bean id="properties" 
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="location" value="domaincontext:"/>
    <property name="properties">
      <value>
        mode=1
      </value>
    </property>
  </bean>

  <bean id="directory" class="org.dcache.services.billing.BillingDirectory">
    <property name="mode" value="${mode}"/>
    <property name="directory" value="${path}"/>    
  </bean>

  <bean id="file-logger" class="org.dcache.services.billing.FileLogger"/>

  <bean id="error-logger" class="org.dcache.services.billing.ErrorFileLogger"/>

  <bean id="billing-info" class="org.dcache.services.billing.BillingInfo"/>

  <bean id="pool-status" class="org.dcache.services.billing.PoolStatus"/>

  <bean id="pool-statistics" class="org.dcache.services.billing.PoolStatistics"/>

  <bean id="log4j-logger" class="org.dcache.services.billing.Log4jLogger"/>

</beans>