<assembly>
    <id>opt</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <excludes>
                <exclude>*:*:war:*</exclude>
                <exclude>saxon:saxon:*:*</exclude>
            </excludes>
            <outputDirectory>opt/d-cache/classes</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>*:*:war:*</include>
            </includes>
            <outputDirectory>opt/d-cache/classes/webapps</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>saxon:saxon:*:*</include>
            </includes>
            <outputDirectory>opt/d-cache/classes/saxon</outputDirectory>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>${filtered-skel}</directory>
            <outputDirectory>opt/d-cache</outputDirectory>
            <excludes>
                <exclude>*.png</exclude>
                <exclude>*.gif</exclude>
                <exclude>bin/**</exclude>
                <exclude>libexec/**/*.sh</exclude>
                <exclude>libexec/**/*.rb</exclude>
                <exclude>jobs/**</exclude>
                <exclude>**/.empty-dir</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${filtered-skel}</directory>
            <outputDirectory>opt/d-cache</outputDirectory>
            <includes>
                <include>bin/**</include>
                <include>libexec/**/*.sh</include>
                <include>libexec/**/*.rb</include>
                <include>jobs/**</include>
            </includes>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>775</fileMode>
        </fileSet>

        <fileSet>
            <directory>${skel}</directory>
            <outputDirectory>opt/d-cache</outputDirectory>
            <includes>
                <include>*.png</include>
                <include>*.gif</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/chimera-sql/org/dcache/chimera</directory>
            <outputDirectory>opt/d-cache/libexec/chimera</outputDirectory>
            <includes>
                <include>sql/**</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${resources}/etc/bash_completion.d</directory>
            <outputDirectory>etc/bash_completion.d</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>