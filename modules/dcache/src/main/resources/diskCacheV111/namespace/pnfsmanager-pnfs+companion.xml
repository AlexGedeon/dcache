<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean id="properties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <description>Imported configuration data</description>
    <property name="location" value="arguments:"/>
  </bean>

  <import resource="pnfsmanager-shared.xml"/>

  <bean id="pnfs-manager" class="diskCacheV111.namespace.PnfsManagerV3"
        init-method="init">
      <description>Request processor</description>
      <property name="threads" value="${threads}"/>
      <property name="threadGroups" value="${threadGroups}"/>
      <property name="listThreads" value="${listThreads}"/>
      <property name="cacheLocationThreads" value="${cachelocation-threads}"/>
      <property name="cacheModificationRelay" value="${cmRelay}"/>
      <property name="pnfsDeleteNotificationRelay" value="${pnfsDeleteRelay}"/>
      <property name="logSlowThreshold" value="${logSlowThreshold}"/>
      <property name="folding" value="${folding}"/>
      <property name="directoryListLimit" value="${directoryListLimit}"/>
      <property name="permissionHandler" ref="permission-handler"/>
      <property name="nameSpaceProvider" ref="name-space-provider"/>
      <property name="cacheLocationProvider" ref="cache-location-provider"/>
      <property name="queueMaxSize" value="${queueMaxSize}"/>
  </bean>

  <bean id="name-space-provider"
        class="diskCacheV111.namespace.provider.PermissionHandlerNameSpaceProvider">
      <description>Name space provider</description>
      <constructor-arg>
          <bean id="basic-provider"
                class="diskCacheV111.namespace.provider.BasicNameSpaceProvider">
              <constructor-arg value="${arguments}"/>
              <property name="cacheLocationProvider" ref="cache-location-provider"/>
          </bean>
      </constructor-arg>
      <property name="permissionHandler" ref="permission-handler"/>
  </bean>

  <bean id="companion-data-source" class="com.jolbox.bonecp.BoneCPDataSource"
        destroy-method="close">
      <property name="driverClass" value="${cachelocation-provider-jdbcDrv}"/>
      <property name="jdbcUrl" value="${cachelocation-provider-dbURL}"/>
      <property name="username" value="${cachelocation-provider-dbUser}"/>
      <property name="password" value="#{ T(diskCacheV111.util.Pgpass).getPassword('${cachelocation-provider-pgPass}', '${cachelocation-provider-dbURL}', '${cachelocation-provider-dbUser}', '${cachelocation-provider-dbPass}') }"/>
      <property name="idleConnectionTestPeriodInMinutes" value="60"/>
      <property name="idleMaxAgeInMinutes" value="240"/>
      <property name="maxConnectionsPerPartition" value="30"/>
      <property name="minConnectionsPerPartition" value="10"/>
      <property name="partitionCount" value="3"/>
      <property name="acquireIncrement" value="5"/>
      <property name="statementsCacheSize" value="100"/>
      <property name="releaseHelperThreads" value="3"/>
  </bean>

  <bean id="cache-location-provider"
        class="diskCacheV111.namespace.provider.SQLNameSpaceProvider">
      <description>Cache location provider</description>
      <constructor-arg value="${arguments}"/>
      <property name="dataSource" ref="companion-data-source"/>
  </bean>
</beans>
