<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
     xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="paul" id="1">
	<comment>Fix primary-key to allow a file to have multiple checksums</comment>

	<dropPrimaryKey tableName="t_inodes_checksum"
			constraintName="t_inodes_checksum_pkey"/>

	<addPrimaryKey tableName="t_inodes_checksum" columnNames="ipnfsid,itype"
		       constraintName="t_inodes_checksum_pkey"/>
    </changeSet>

</databaseChangeLog>
